@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>
            
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ServiceID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" id="exampleInputName1" placeholder="Başlık">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel</label>
                    <input type="text" class="form-control" asp-for="Image" id="exampleInputEmail3" placeholder="Görsel">
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control" asp-for="Description" id="exampleTextarea1" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>

            </form>
        </div>
    </div>
</div>
